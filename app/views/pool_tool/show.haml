        %b Device name
    .row
      .col-3#poolTool_popover_deviceName
        Device 1
    .row{style: "margin-bottom: 0.10em;"}
      .col-3
        %b Renter/Reason
    .row
      .col-3#poolTool_popover_renter
        Hermann Wagner
    .row{style: "margin-bottom: 0.10em;"}
      .col-3
        %b Availability
    .row
      .col-3#poolTool_popover_availability
        intern

    #datepicker_wrapper2
      .input-daterange.input-group.clearfix#datepicker2{:data => {:locale => I18n.locale, :format => t("datepicker.format")}}
        .row
          .col-2{style: "margin-bottom: 0.15em;"}
            %b Starts on
          .datepicker-start-wrapper.col-3
            %input.input-sm.form-control.required#start-on2{:type => 'text', :name => "start_on2", :placeholder => t("datepicker.format"), :data => { :output => "booking-start-output" } }
