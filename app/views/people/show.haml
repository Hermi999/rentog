- content_for :javascript do
  initialize_profile_view("#{@person.username}");

- content_for :title_header do
  %h1
    %span.profile-title= @person.name(@current_community) + (@community_customization && @community_customization.storefront_label ? @community_customization.storefront_label : "")

.row
  .col-8

    .row.relative
      .people-image-mobile
        = huge_avatar_thumb(@person)
      .profile-action-buttons-mobile
        = render :partial => "profile_action_buttons"

    .row
      - if @person.description && !@person.description.blank?
        - text_with_line_breaks do
          = @person.description
      - elsif current_user?(@person)
        = link_to person_settings_path(@person) do
          = icon_tag("new_listing", ["icon-with-text"])
          = t(".add_description")
          <br><br>

    / renting listings
    .row.profile-row
      %h2.people-header
        / if no listings at all
        - if renting_listings.total_entries == 0 && selling_listings.total_entries == 0 && ad_listings.total_entries == 0
          - if current_user?(@person) && params[:show_closed]
            = t(".no_listings")
          - else
            = t(".no_open_listings")

        / Renting listings available
        - if renting_listings.total_entries > 0
          = t(".renting_listings")
          (
          - if current_user?(@person) && params[:show_closed]
            = pluralize(renting_listings.total_entries, t(".listing"), t(".listings"))
          - else
            = pluralize(renting_listings.total_entries, t(".open_listing"), t(".open_listings"))
          )

          %span.people-show-closed-link
            - if current_user?(@person)
              - if params[:show_closed]
                = link_to t("people.profile_listings.show_only_open"), person_path(@person)
              - else
                = link_to t("people.profile_listings.show_also_closed"), person_path(@person, :show_closed => true)

    - if renting_listings.total_entries > 0

      / Legend
      .listing-legend-wrapper
        .listing-legend-header= t(".legend_header")
        %span.listing-legend.listing-legend-intern= t(".legend_intern")
        %span.listing-legend.listing-legend-trusted= t(".legend_trusted")
        %span.listing-legend.listing-legend-global= t(".legend_global")

      #profile-listings-list
        - limit = 12
        = render :partial => 'listings/profile_listings', :locals => {person: @person, limit: limit, listings: renting_listings}



    / ad listings
    - if ad_listings.total_entries > 0
      .row.profile-row
        %h2.people-header
          = t(".ad_listings")
          (
          - if current_user?(@person) && params[:show_closed]
            = pluralize(ad_listings.total_entries, t(".listing"), t(".listings"))
          - else
            = pluralize(ad_listings.total_entries, t(".open_listing"), t(".open_listings"))
          )

          %span.people-show-closed-link
            - if current_user?(@person)
              - if params[:show_closed]
                = link_to t("people.profile_listings.show_only_open"), person_path(@person)
              - else
                = link_to t("people.profile_listings.show_also_closed"), person_path(@person, :show_closed => true)

      #profile-listings-list
      - limit = 12
      = render :partial => 'listings/profile_listings', :locals => {person: @person, limit: limit, listings: ad_listings}


    / selling listings
    - if selling_listings.total_entries > 0
      .row.profile-row
        %h2.people-header
          = t(".selling_listings")
          (
          - if current_user?(@person) && params[:show_closed]
            = pluralize(selling_listings.total_entries, t(".listing"), t(".listings"))
          - else
            = pluralize(selling_listings.total_entries, t(".open_listing"), t(".open_listings"))
          )

          %span.people-show-closed-link
            - if current_user?(@person)
              - if params[:show_closed]
                = link_to t("people.profile_listings.show_only_open"), person_path(@person)
              - else
                = link_to t("people.profile_listings.show_also_closed"), person_path(@person, :show_closed => true)


      #profile-listings-list
        - limit = 12
        = render :partial => 'listings/profile_listings', :locals => {person: @person, limit: limit, listings: selling_listings}


    / other listings
    - if other_listings.total_entries > 0
      .row.profile-row
        %h2.people-header
          = t(".other_listings")
          (
          - if current_user?(@person) && params[:show_closed]
            = pluralize(other_listings.total_entries, t(".listing"), t(".listings"))
          - else
            = pluralize(other_listings.total_entries, t(".open_listing"), t(".open_listings"))
          )

          %span.people-show-closed-link
            - if current_user?(@person)
              - if params[:show_closed]
                = link_to t("people.profile_listings.show_only_open"), person_path(@person)
              - else
                = link_to t("people.profile_listings.show_also_closed"), person_path(@person, :show_closed => true)


      #profile-listings-list
        - limit = 12
        = render :partial => 'listings/profile_listings', :locals => {person: @person, limit: limit, listings: other_listings}



    / Trusted companies & followed people
    - if @current_community.follow_in_use?
      .row.profile-row
        - if @person.is_organization
          = render :partial => "trusted_companies", :locals => { :person => @person, followed_people: followed_people, :limit => 6 }
        - else
          = render :partial => "followed_people", :locals => { :person => @person, followed_people: followed_people, :limit => 6 }


    / Feedback
    - if @current_community.testimonials_in_use
      #people-testimonials.listing-main
        .row.profile-row
          %h2.people-header
            - if received_testimonials.size > 0
              = pluralize(received_testimonials.size, t(".review"), t(".reviews"))
              = "(#{feedback_positive_percentage.to_s}% #{t("people.show.positive")}, #{received_positive_testimonials.size}/#{received_testimonials.size})"
            - else
              = t(".no_reviews")
          - if received_testimonials.size > 0
            #profile-testimonials-list
              = render :partial => "testimonials", :locals => {:received_testimonials => received_testimonials, :limit => 3}

    - if ( @current_user && (@current_community.others_can_see_employees? || @current_user.is_admin_of?(@current_community) || current_user?(@person)) && @person.is_organization )
      - limit = 8
      = render :partial => 'show_employees', :locals => { :company => @person, :limit => 6 }

  / Profile image
  .col-4
    .row
      .people-image
        = huge_avatar_thumb(@person)

    .row
      .profile-action-buttons-desktop
        = render :partial => "profile_action_buttons"

    - if !@person.is_organization
      .row
        %h2
          =t("people.show.employer")
        = link_to medium_avatar_thumb(@organization), person_path(@organization)
        %p
          =link_to(@organization.organization_name, person_path(@organization))

- content_for :extra_javascript do
  :javascript
    window.ST.initializeFollowButtons();
