%table{:border => "0", :cellpadding => "0", :cellspacing => "0", :style => "border-bottom:1px solid #ededed;padding-bottom:5px;padding-top: 20px;", :width => "100%"}
  %tbody
    %tr
      %td{:valign => "top", :style => "margin-bottom: 0;padding-bottom: 0;"}
        / Listing title
        %h2{:style => "font-family:Helvetica Neue, Helvetica, Arial, sans-serif;font-weight: normal; font-size: 22px; margin-bottom: 8px; margin-top: 2px; padding:0;text-justify: none;line-height:26px;"}
          = link_to listing_url(@url_params.merge({:id => listing[:listing].id})), :target => "_blank" do
            - if @show_listing_shape_label
              = shape_name(listing[:listing]) + ":"
            = listing[:listing].title
      %td
        / Return button

    %tr
      %td
        / Listing description
        - unless listing[:listing].description.blank?
          %p{:style => "font-family:Helvetica Neue, Helvetica, Arial, sans-serif;font-size:16px;font-weight:100px; color:#898989;font-style: italic;line-height:22px;margin-top:0;margin-bottom:8px;"}
            - text_with_line_breaks_for_email do
              = truncate_html(listing[:listing].description, :length => 200, :omission => "...")

      %td
        / Listing image
        - unless listing[:listing].listing_images.empty?
          = link_to(image_tag(listing[:listing].listing_images.first.image.url(:email), :class => "listing_main_image", :alt => listing[:listing].title, :height => "100", :width => "150", :style => "display:block;margin-left:30px;margin-bottom:20px;margin-top:4px;border:0", :align => "right"), listing_url(@url_params.merge({:id => listing[:listing].id})))
