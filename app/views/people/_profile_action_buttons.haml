- if current_user?(@person)
  = render :partial => "people/edit_profile_button"
- else
  %a.profile-contact-link{href: new_person_person_message_path(@person)}
    .content
      = t("people.show.contact", :person => @person.given_name_or_username)

- if @current_community.follow_in_use? && @current_user && !current_user?(@person)
  - if @person.is_organization && @current_user.is_organization
    - if (trusted_relation = FollowerRelationship.where(:follower_id => @current_user.id, :person_id => @person.id).first)
      = render :partial => "config_button", :locals => { :person => @person, :trusted_relation => trusted_relation }
      = render :partial => "trust_button", :locals => { :person => @person, :size => "small" }
    - else
      = render :partial => "trust_button", :locals => { :person => @person }

  - elsif !@current_user.is_organization
    = render :partial => "follow_button", :locals => { :person => @person }

- if @current_user && @current_user.has_admin_rights_in?(@current_community)
  - if @person.is_organization
    = link_to "Pool Tool", person_poolTool_path(@person)
  - else
    = link_to "Companies Pool Tool", person_poolTool_path(@person.company)
