- content_for :javascript do
  window.ST.initialize_landingpage();

/ Add something to the cover phote (this is done with a 'yield' in application.haml)
- content_for :title_header do
  / if big cover photo
  - with_big_cover_photo do
    %h1.marketplace-lander-content-title= t("landing_page.only_pool_tool.slogan")
    %p= t("landing_page.only_pool_tool.description")
    .button.howitworks
      = link_to how_to_use_help_index_path do
        = t("landing_page.only_pool_tool.how_it_works")


  / if small cover photo
  - with_small_cover_photo do
    %h1.marketplace-lander-content-title= t("landing_page.only_pool_tool.slogan")

.landing-page-section.main-features
  %p.landing-page-section-header= t("landing_page.only_pool_tool.section1_header")
  %p.landing-page-section-main-text= t("landing_page.only_pool_tool.section1_mainText")

  .row
    .col-5.landing-page-colored-box
      %p.landing-page-section-small-header
        =t("landing_page.only_pool_tool.section1_smallHeader1")
      %p.landing-page-section-text
        =t("landing_page.only_pool_tool.section1_text1")
        .button.create_listing
          = link_to "https://www.youtube.com/embed/G7-X1dQTG8c", :class=>"create_listing_youtube" do
            =t("landing_page.only_pool_tool.section1_button1")

    .col-1
    .col-5.landing-page-colored-box
      %p.landing-page-section-small-header
        =t("landing_page.only_pool_tool.section1_smallHeader2")
      %p.landing-page-section-text
        =t("landing_page.only_pool_tool.section1_text2")
        .button.book-a-device
          = link_to "http://www.youtube.com/embed/VOJyrQa_WR4?rel=0&amp;wmode=transparent", :class=>"book_a_listing_youtube" do
            =t("landing_page.only_pool_tool.section1_button2")

    .col-1

-content_for :section_1 do
  .landing-page-section.pooltool_screenshot#showBox
    .landing-page-content.page
      %p.landing-page-colored-section-header= t("landing_page.only_pool_tool.section2_header")
      %p.landing-page-colored-section-main-text= t("landing_page.only_pool_tool.section2_mainText")
      = image_tag "landingpage/pool_tool.PNG", class: "pool_tool_screenshot"

-content_for :section_2 do
  .landing-page-section.rentog_on_mobile
    .landing-page-content
      = image_tag "landingpage/mobile_rentog.png", class: "mobile_rentog_screenshot"
      .landing-page-mobile-wrapper
        %p.landing-page-section-header
          %b Rentog
          %br
          = t("landing_page.only_pool_tool.section3_header")
        = link_to image_tag("landingpage/Download_on_the_App_Store_Badge_US-UK_135x40.svg"), "#", :class => "landingpage-apple-store-icon"
        = link_to image_tag("landingpage/android_en_badge.png"), "#", :class => "landingpage-android-store-icon"
